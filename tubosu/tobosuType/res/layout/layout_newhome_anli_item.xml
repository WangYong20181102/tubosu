<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp">

    <ImageView
        android:id="@+id/newhome_anli_item_img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="12dp"
        android:scaleType="centerCrop"
        android:background="@drawable/new_home_loading"/>

    <RelativeLayout
        android:id="@+id/layout_newhome_anli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newhome_anli_item_img"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/newhome_anli_item_img">
        <TextView
            android:id="@+id/newhome_anli_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宁波花园"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxLength="8"
            android:textSize="14sp"
            android:textColor="@color/color_black"/>
        <TextView
            android:id="@+id/newhome_anli_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/newhome_anli_item_title"
            android:layout_marginLeft="10dp"
            android:text="徐金水"
            android:textSize="14sp"
            android:textColor="@color/color_black"/>

        <TextView
            android:id="@+id/newhome_anli_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxx"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="14dp"
            android:layout_below="@+id/newhome_anli_item_title"
            android:layout_alignLeft="@+id/newhome_anli_item_title"
            android:textSize="10sp"
            android:textColor="#888888"/>
    </RelativeLayout>

</RelativeLayout>
