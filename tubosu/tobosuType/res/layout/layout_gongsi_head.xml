<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:background="@color/white">

    <!-- 标记1 开始 -->
    <RelativeLayout
        android:id="@+id/showOrNotLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relgongisBanner"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/gongsiViewpager"
                    android:layout_width="match_parent"
                    android:layout_height="180dp">
                </android.support.v4.view.ViewPager>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/gognsiDotLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/slideRelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:layout_below="@+id/relgongisBanner">
            <LinearLayout
                android:id="@+id/ivRecomandsficon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/diamond"/>

                <TextView
                    android:layout_toRightOf="@+id/ivRecomandsficon"
                    android:text="优质推荐"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/gongsiRecyclerViewTuijian"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/ivRecomandsficon"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

        <View
            android:id="@+id/gongsiGap"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/slideRelayout"
            android:background="#F7F7F7"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gongsiGap">
            <LinearLayout
                android:id="@+id/headLayoutSelectUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvZonghe"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="43dp"
                        android:text="综合"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="#FF6F20"/>
                    <TextView
                        android:id="@+id/tvLiulanzuiduo"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="43dp"
                        android:text="浏览最多"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/gongsi_unselected"/>
                    <TextView
                        android:id="@+id/tvAnlizuiduo"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="43dp"
                        android:text="案例最多"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/gongsi_unselected"/>
                    <TextView
                        android:id="@+id/tvLiwozuijin"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="43dp"
                        android:text="离我最近"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/gongsi_unselected"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvShaixuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="筛选"
                            android:gravity="center"
                            android:layout_marginRight="4dp"
                            android:layout_centerVertical="true"
                            android:textSize="12sp"
                            android:textColor="#666666"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tvShaixuan"
                            android:background="@drawable/loudou"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/vsdfaedfa"
                android:layout_below="@+id/headLayoutSelectUp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EBEBEB"/>
            <LinearLayout
                android:id="@+id/headLayoutSelectDown"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_below="@+id/vsdfaedfa"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/shitirenzheng"
                        android:layout_width="101dp"
                        android:layout_height="27dp"
                        android:background="@drawable/select_item_textview_bg"
                        android:gravity="center"
                        android:textColor="#4D4D4D"
                        android:layout_centerInParent="true"
                        android:textSize="11sp"
                        android:text="实体认证"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tuijian"
                        android:layout_width="101dp"
                        android:layout_height="27dp"
                        android:gravity="center"
                        android:textColor="#4D4D4D"
                        android:background="@drawable/select_item_textview_bg"
                        android:layout_centerInParent="true"
                        android:textSize="11sp"
                        android:text="推荐"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="101dp"
                        android:layout_height="27dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:background="@drawable/select_item_textview_bg">

                        <TextView
                            android:id="@+id/fuwuquyu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:layout_centerVertical="true"
                            android:textColor="#4D4D4D"
                            android:text="服务区域"/>
                        <ImageView
                            android:id="@+id/ivFuwuquyu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/fuwuquyu"
                            android:background="@drawable/tt"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
