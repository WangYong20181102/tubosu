<?xml version="1.0" encoding="utf-8"?><!--文章的单项-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/item_hp_article_cv"
        android:layout_width="160dp"
        android:layout_height="222dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <!--时间-->
                <TextView
                    android:id="@+id/item_hp_article_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018/8/23"
                    android:textColor="#999"
                    android:textSize="12dp" />
                <!--文本描述-->
                <TextView
                    android:id="@+id/item_hp_article_dec_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:maxLength="15"
                    android:maxLines="2"
                    android:text="发货速度见客户富士康家居"
                    android:textColor="#363650"
                    android:textSize="15dp" />
            </LinearLayout>


            <!--底部的图片-->
            <ImageView
                android:id="@+id/item_hp_article_bg_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"
                android:src="@drawable/home_style" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>