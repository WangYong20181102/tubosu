<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/sv_decorate_acc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/decorate_acc_bar"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/color_icon">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <RelativeLayout
                        android:id="@+id/decorate_account_back"
                        android:layout_width="40dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="14dp"
                            android:padding="5dp"
                            android:background="@drawable/back_up" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="装修开支"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/iv_edit_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edit_bill" />

                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_top_123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sdsd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp"
                        android:layout_marginTop="16dp">

                        <com.tbs.tobosutype.customview.MySeekBar
                            android:id="@+id/seek_progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/seekbar_define_style"
                            android:thumb="@null" />

                        <TextView
                            android:id="@+id/tv_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="小主，一切还在预算当中"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_total_buduget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="0.00"
                                android:textColor="@color/white"
                                android:textSize="22sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="14dp"
                                android:text="总预算(元)"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_total_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="100000"
                                android:textColor="@color/white"
                                android:textSize="22sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="14dp"
                                android:text="总开支(元)"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <!--  以下是记账记录  =====================================================  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/rel_data_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/da_rengong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="112dp"
                            android:layout_marginTop="15dp"
                            android:text="人工20.00%"
                            android:textColor="#97b6d6"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/da_text_rengong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/da_rengong"
                            android:layout_marginLeft="125dp"
                            android:layout_marginTop="2dp"
                            android:text="¥8632"
                            android:textColor="#97b6d6"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/da_jiancai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="50dp"
                            android:text="建材22.81%"
                            android:textColor="#ff805c"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/da_text_jiancai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/da_jiancai"
                            android:layout_marginRight="42dp"
                            android:layout_marginTop="2dp"
                            android:text="¥14522"
                            android:textColor="#ff805c"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/da_chuwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="90dp"
                            android:text="厨卫20.00%"
                            android:textColor="#f1c664"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/da_text_chuwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/da_chuwei"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="2dp"
                            android:text="¥12666"
                            android:textColor="#f1c664"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/da_wujin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="140dp"
                            android:text="五金9.19%"
                            android:textColor="#8cd2a3"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/da_text_wujin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/da_wujin"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="2dp"
                            android:text="¥7589"
                            android:textColor="#8cd2a3"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/da_jiaju"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="140dp"
                            android:layout_marginTop="210dp"
                            android:text="家具26.37%"
                            android:textColor="#6fb0e5"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/da_text_jiaju"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/da_jiaju"
                            android:layout_marginLeft="150dp"
                            android:layout_marginTop="2dp"
                            android:text="¥16588"
                            android:textColor="#6fb0e5"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/da_qita"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="170dp"
                            android:text="其他9.00%"
                            android:textColor="#ddb5a5"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/da_text_qita"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/da_qita"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="2dp"
                            android:text="¥4589"
                            android:textColor="#ddb5a5"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/pie_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="总开支分析图"
                                android:textColor="@color/text_gray" />
                        </LinearLayout>

                        <com.tbs.tobosutype.customview.MyChatView
                            android:id="@+id/da_my_chat_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            app:MyChatView_radius="100dp"
                            app:MyChatView_strokewidth="50dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:background="#F5F5F5"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white">

                        <com.tbs.tobosutype.customview.SwipeListView
                            android:id="@+id/record_listview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@null"
                            android:background="@color/white"
                            android:dividerHeight="1dp"
                            app:right_width="120dp">
                        </com.tbs.tobosutype.customview.SwipeListView>
                    </RelativeLayout>
                </LinearLayout>

                <!--记账的记录为空时显示-->
                <LinearLayout
                    android:id="@+id/rel_data_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="21dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/sd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/no_accou" />

                    <TextView
                        android:id="@+id/tv_start_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="14dp"
                        android:background="@drawable/shape_start_acc_bg"
                        android:paddingBottom="6dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="6dp"
                        android:text="开始记账"
                        android:textColor="@color/white"
                        android:textSize="17sp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>