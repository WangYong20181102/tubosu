<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:visibility="visible">
    <!--免费设计-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/shape_yin_ying"
        android:padding="1dp">

        <android.support.v7.widget.CardView
            android:id="@+id/ihph_mianfeisheji_cv_new"
            android:layout_width="105dp"
            android:layout_height="150dp"

            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ihph_mianfeisheji_img_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/home_page_mianfeisheji" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <!--急速报价-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/shape_yin_ying"
        android:padding="1dp">

        <android.support.v7.widget.CardView
            android:id="@+id/ihph_jisubaojia_cv_new"
            android:layout_width="105dp"
            android:layout_height="150dp"

            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ihph_jisubaojia_img_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/home_page_jisubaojia" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <!--专业量房-->
    <RelativeLayout
        android:background="@drawable/shape_yin_ying"
        android:padding="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp">

        <android.support.v7.widget.CardView
            android:id="@+id/ihph_zhuanyeliangfang_cv_new"
            android:layout_width="105dp"
            android:layout_height="150dp"

            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ihph_zhuanyeliangfang_img_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/home_page_zhuangyeliangfang" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>