<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/companygav"
        android:background="#E5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/companygav"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="81dp"
            android:layout_height="61dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/shape_image_bg">

            <ImageView
                android:id="@+id/ivCComopanyIcon"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:background="@drawable/new_home_loading"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvGongsiName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_gravity="center_vertical"
                    android:text="阡陌装饰"
                    android:textColor="@color/color_black"
                    android:layout_marginLeft="14dp"/>

                <ImageView
                    android:id="@+id/vGongsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/renzheng"/>

                <ImageView
                    android:id="@+id/tuijianGongsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/tuijian"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/pinfen"
                    android:stepSize="1"
                    android:maxHeight="8.4dp"
                    android:minHeight="8.4dp"
                    android:isIndicator="false"
                    android:layout_gravity="center_vertical"
                    android:numStars="5"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/zixunNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(4444咨询)"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:textColor="#8F8F8F"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="21dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tvCaseAndCase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="设计：4      案例：44"
                    android:textColor="#8F8F8F"/>

                <TextView
                    android:id="@+id/ccDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="44km"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvYouhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:text=" 这个是优惠哦"
                android:maxLines="1"
                android:maxEms="16"
                android:ellipsize="end"
                android:drawableLeft="@drawable/hui00"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#EEEEEE"/>
</RelativeLayout>
