<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/newhome_zhuanti_item_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="14dp"
        android:background="@drawable/new_home_loading"/>

    <LinearLayout
        android:id="@+id/sfsdfgfdadfg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:layout_below="@+id/newhome_zhuanti_item_img">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="14dp"
                android:background="@drawable/lines"/>
            <TextView
                android:id="@+id/newhome_zhuanti_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宁波花园"
                android:maxLines="1"
                android:maxLength="12"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="@color/color_black"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:background="@drawable/lines"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_newhome_zhuanti_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxx"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:textSize="13sp"
            android:maxLines="2"
            android:lineSpacingExtra="4dp"
            android:ellipsize="end"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/tv_newhome_zhuanti_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-10-26"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="#c5c5c5"/>
    </LinearLayout>

    <View
        android:layout_below="@+id/sfsdfgfdadfg"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#F7F7F7"/>

</RelativeLayout>

