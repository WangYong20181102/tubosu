<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_weight="3"
        android:layout_alignTop="@+id/reslsdf"
        android:layout_alignBottom="@+id/reslsdf">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_ketang_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="2"
                android:lineSpacingExtra="4dp"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:textColor="#484848"
                android:layout_marginTop="17dp"
                android:text="165163165161"/>

            <TextView
                android:id="@+id/tv_ketang_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_alignParentBottom="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#999999"
                android:layout_alignLeft="@+id/tv_ketang_title"
                android:layout_marginBottom="17dp"
                android:text="中是东莞"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reslsdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_ketang_img"
                android:layout_width="144dp"
                android:layout_height="84dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
     </RelativeLayout>
</LinearLayout>
