<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_ketang_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLines="2"
        android:maxLength="21"
        android:ellipsize="end"
        android:layout_marginLeft="14dp"
        android:layout_alignTop="@+id/iv_ketang_img"
        android:text="165163165161"/>

    <TextView
        android:id="@+id/tv_ketang_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:maxLines="1"
        android:maxLength="13"
        android:ellipsize="end"
        android:layout_alignLeft="@+id/tv_ketang_title"
        android:layout_alignBottom="@+id/iv_ketang_img"
        android:text="165163165161"/>

    <ImageView
        android:id="@+id/iv_ketang_img"
        android:layout_width="144dp"
        android:layout_height="94dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"/>

</RelativeLayout>
