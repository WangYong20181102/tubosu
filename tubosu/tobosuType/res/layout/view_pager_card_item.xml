<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="285dp"
    android:layout_height="318dp"
    android:layout_gravity="center"
    android:background="@color/white"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <!--图片-->
        <ImageView
            android:id="@+id/item_view_card_img"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_style" />

        <!--装修类型-->
        <ImageView
            android:src="@drawable/all"
            android:id="@+id/item_view_card_dec_type_img"
            android:layout_width="32dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="228dp" />
        <!--标签-->
        <ImageView
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/said" />
        <!--案例描述性文本-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="160dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/text_bg" />
            <!--大标题描述-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_view_card_commuit_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:ems="8"
                    android:singleLine="true"
                    android:text="的功夫大使馆的"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
                <!--小标题显示-->
                <TextView
                    android:id="@+id/item_view_card_subtitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:ems="8"
                    android:singleLine="true"
                    android:text="电饭锅电饭锅"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="183dp">
            <!--头像的背景-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo_bg" />
            <!--头像-->
            <ImageView
                android:id="@+id/item_view_card_icon_img"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_centerInParent="true"
                android:src="@drawable/cheat2" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_view_card_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="258dp"
            android:ellipsize="marquee"
            android:gravity="top"
            android:text="是大法官斯冯小刚和法规和豆腐干"
            android:textColor="#363650"
            android:textSize="14dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>