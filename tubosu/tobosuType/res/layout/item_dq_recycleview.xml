<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <RelativeLayout
        android:id="@+id/rl_rv_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/image_rv_right"
            android:layout_toStartOf="@+id/image_rv_right">
            <TextView
                android:id="@+id/tv_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="家里如何装修才会更好呢？"
                android:textColor="#000000"
                android:textSize="15sp"
                android:maxLines="2"/>
            <TextView
                android:id="@+id/tv_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:text="家里如何装修才会更好呢家里如何装修才会更好呢家里如何装修才会更好呢"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/tv_num_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100问答"/>
                <TextView
                    android:id="@+id/tv_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018.11.06"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/image_rv_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/image_ad_photo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/img_about_details"
        android:layout_below="@+id/rl_rv_layout"
        android:scaleType="fitXY"
        android:visibility="gone"/>
</RelativeLayout>