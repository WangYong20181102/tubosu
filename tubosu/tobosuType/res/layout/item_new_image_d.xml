<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:background="@color/white"
    android:orientation="vertical">
    <!--瀑布流的子项-->
    <!--覆盖图-->
    <LinearLayout
        android:id="@+id/item_new_image_img_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_new_image_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/b_home_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">
        <!--标题-->
        <TextView
            android:id="@+id/item_new_image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_new_image_img"
            android:layout_marginTop="12dp"
            android:text="简约欧式三居室100㎡"
            android:textColor="#1a1a1a"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <!--设计师的头像-->
            <ImageView
                android:id="@+id/item_new_image_design_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/icon_free_toggle" />
            <!--设计师的名字-->
            <TextView
                android:id="@+id/item_new_image_design_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/item_new_image_design_icon"
                android:ellipsize="marquee"
                android:ems="7"
                android:singleLine="true"
                android:text="害羞的小狮子"
                android:textColor="#b3b3b3"
                android:textSize="11sp" />
            <!--收藏的图标-->
            <LinearLayout
                android:id="@+id/item_new_image_shoucan_icon_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_new_image_shoucan_icon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/shoucang_before" />
                <!--收藏的数量-->
                <TextView
                    android:id="@+id/item_new_image_shoucan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="662"
                    android:textColor="#b3b3b3"
                    android:textSize="11sp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>