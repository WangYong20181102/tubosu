<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_phone_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/tv_input_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/fast_logging_bundlephone_text"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_input_phone_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_input_phone"
                android:background="@null"
                android:drawableBottom="@drawable/binding_phone_edittext_bg"
                android:ems="11"
                android:hint="@string/fast_logging_input_bundlephone"
                android:maxLength="11"
                android:inputType="phone"
                android:textColor="@color/color_neutralgrey"
                android:textSize="15sp" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/tv_input_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="验证码"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_input_verification_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_input_verification"
                android:background="@null"
                android:drawableBottom="@drawable/binding_phone_edittext_bg"
                android:ems="4"
                android:hint="@string/fast_logging_input_verifphone1"
                android:inputType="number"
                android:textColor="@color/color_neutralgrey"
                android:textSize="15sp" >
            </EditText>

            <Button
                android:id="@+id/bt_obtain_verif_login"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/user_login_btn_background"
                android:text="@string/fast_logging_obtain_verif"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_account_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/tv_input_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="账号"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_input_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_input_username"
                android:background="@null"
                android:hint="@string/tv_input_account_or_cellphone"
                android:drawableBottom="@drawable/binding_phone_edittext_bg"
                android:ems="11"
                android:textColor="@color/color_neutralgrey"
                android:textSize="15sp" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/tv_input_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="密码"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_input_password_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_input_password"
                android:background="@null"
                android:drawableBottom="@drawable/binding_phone_edittext_bg"
                android:inputType="textPassword"
                android:hint="@string/inputpassword_verif"
                android:textColor="@color/color_neutralgrey"
                android:textSize="15sp" >
            </EditText>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_obtain_enter_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_btn_background"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_obtain_weixin_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_weixin_login"
        android:clickable="true"
        android:gravity="center" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:clickable="false"
            android:drawableLeft="@drawable/img_weixin"
            android:drawablePadding="3dp"
            android:text="微信快速登录"
            android:textColor="@color/color_neutralgrey"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>