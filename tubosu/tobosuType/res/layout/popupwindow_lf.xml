<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="30.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:gravity="center_vertical"
            android:text="请描述量房情况"
            android:textColor="@color/color_darkgray"
            android:textSize="16.0sp" />

        <EditText
            android:id="@+id/et_lf_situation"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:background="@drawable/verification_edittext_bg"
            android:textColor="@color/color_neutralgrey" />

        <Button
            android:id="@+id/bt_subit"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@color/color_icon"
            android:padding="2.0dip"
            android:text="确认量房"
            android:textColor="@android:color/white"
            android:textSize="15.0sp" />
    </LinearLayout>

</RelativeLayout>