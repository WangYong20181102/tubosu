<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp">


    <ImageView
        android:id="@+id/delete_icon_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:background="@drawable/d_unselect"/>

    <ImageView
        android:id="@+id/comapanyIcop"
        android:layout_width="80dp"
        android:layout_height="58dp"
        android:layout_toRightOf="@+id/delete_icon_company"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/new_home_loading"
        android:layout_centerVertical="true"/>


    <LinearLayout
        android:id="@+id/lins_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/comapanyIcop"
        android:layout_toRightOf="@+id/comapanyIcop"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            android:maxLines="1"
            android:maxEms="9"
            android:ellipsize="end"
            android:text="xx公司"/>

        <ImageView
            android:id="@+id/comapanyFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:background="@drawable/icon_v"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/lins_company"
            android:layout_alignBottom="@id/lins_company"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/comapanyIcop"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="12sp"
            android:text="设计方案"/>
        <TextView
            android:id="@+id/tvDesignNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF8B36"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:text="设计方案"/>
        <TextView
            android:id="@+id/tvCaseNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF8B36"
            android:textSize="12sp"
            android:text="0"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvCompanyAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/comapanyIcop"
        android:layout_alignBottom="@+id/comapanyIcop"
        android:textColor="#999999"
        android:textSize="11sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="14dp"
        android:text="深圳市下乡节操吧"/>

</RelativeLayout>
