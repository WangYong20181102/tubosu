<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/newhome_swiprefreshlayout"
        android:layout_width="match_parent"
        android:layout_below="@+id/rel_newhomebar"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/newhome_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>


    <RelativeLayout
        android:id="@+id/rel_newhomebar"
        android:layout_width="match_parent"
        android:background="@color/color_icon"
        android:layout_height="49dp">

        <TextView
            android:id="@+id/app_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="土拨鼠"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relSelectCity"
        android:layout_width="match_parent"
        android:background="#00000000"
        android:layout_height="49dp">
        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:background="@drawable/sdf"/>

        <TextView
            android:id="@+id/newhomeCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_add"
            android:text="深圳"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:textSize="14sp"
            android:textColor="#403f3f"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/newhomeCity"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/tt"/>
    </RelativeLayout>
</FrameLayout>
