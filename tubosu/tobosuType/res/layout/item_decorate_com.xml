<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_dec_com_rl"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <!--公司图标-->
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:id="@+id/item_dec_com_icon_img"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_centerInParent="true"
                android:src="@drawable/app_icon" />
        </RelativeLayout>
        <!--右侧信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <!--名称-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_dec_com_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="居众装饰"
                    android:textColor="#363650"
                    android:textSize="15dp" />
                <!--是否认证-->
                <ImageView
                    android:id="@+id/item_dec_com_is_vp_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/item_dec_com_name_tv"
                    android:src="@drawable/v_p" />
                <!--距离-->
                <TextView
                    android:id="@+id/item_dec_com_long_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity=""
                    android:gravity="bottom"
                    android:text="360m"
                    android:textColor="#999"
                    android:textSize="12dp" />
            </RelativeLayout>
            <!--星级-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_dec_com_start_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_green" />

                <ImageView
                    android:id="@+id/item_dec_com_start_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/star_green" />

                <ImageView
                    android:id="@+id/item_dec_com_start_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/star_green" />

                <ImageView
                    android:id="@+id/item_dec_com_start_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/star_green" />

                <ImageView
                    android:id="@+id/item_dec_com_start_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/star_green" />
            </LinearLayout>
            <!--咨询相关信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <!--咨询数量-->
                <TextView
                    android:id="@+id/item_dec_com_zixun_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咨询:52512"
                    android:textColor="#6f6f8f"
                    android:textSize="12dp" />
                <!--方案数量-->
                <TextView
                    android:id="@+id/item_dec_com_fangan_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="方案:52512"
                    android:textColor="#6f6f8f"
                    android:textSize="12dp" />
                <!--效果图-->
                <TextView
                    android:id="@+id/item_dec_com_xiaoguotu_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="效果图:52512"
                    android:textColor="#6f6f8f"
                    android:textSize="12dp" />

            </LinearLayout>
            <!--优惠信息-->
            <LinearLayout
                android:id="@+id/item_dec_com_youhui_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/preferential" />

                <TextView
                    android:id="@+id/item_dec_com_youhui_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="双十一大促销"
                    android:textColor="#6f6f8f"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>