<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp">

    <ImageView
        android:id="@+id/newhome_sheji_item_img"
        android:layout_width="188dp"
        android:layout_height="123dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="@drawable/new_home_loading"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newhome_sheji_item_img"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/newhome_sheji_item_img">

        <TextView
            android:id="@+id/newhome_sheji_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宁波花园"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxLength="8"
            android:textSize="14sp"
            android:textColor="@color/color_black"/>

        <TextView
            android:id="@+id/tv_newhome_sheji_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxx"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/newhome_sheji_item_title"
            android:layout_alignLeft="@+id/newhome_sheji_item_title"
            android:textSize="12sp"
            android:textColor="#888888"/>
    </RelativeLayout>

</RelativeLayout>
