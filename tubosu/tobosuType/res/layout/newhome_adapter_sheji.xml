<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/sleft_six"
        android:layout_width="6dp"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/slsix"
        android:layout_width="10dp"
        android:layout_toRightOf="@+id/sleft_six"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/newhome_sheji_item_img"
        android:layout_width="188dp"
        android:layout_height="123dp"
        android:layout_toRightOf="@+id/slsix"
        android:scaleType="centerCrop"
        android:background="@drawable/new_home_loading"/>

    <RelativeLayout
        android:id="@+id/resheji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newhome_sheji_item_img"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/newhome_sheji_item_img">

        <TextView
            android:id="@+id/newhome_sheji_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宁波花园"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="@color/color_black"/>

        <TextView
            android:id="@+id/tv_newhome_sheji_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxx"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/newhome_sheji_item_title"
            android:layout_alignLeft="@+id/newhome_sheji_item_title"
            android:textSize="12sp"
            android:textColor="#888888"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/sright_six"
        android:layout_width="10dp"
        android:layout_toRightOf="@+id/resheji"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/srights1ix"
        android:layout_width="6dp"
        android:layout_toRightOf="@+id/sright_six"
        android:layout_height="match_parent" />

</RelativeLayout>
