<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SheJiShiActivity">


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/shejishiSwip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/shejishiRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/shejishiBar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/relShejishiBack"
            android:layout_width="49dp"
            android:layout_height="49dp">
            <ImageView
                android:id="@+id/ivbacUpck"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:src="@drawable/activity_back"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/shejishiShare"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/zh02"/>
    </RelativeLayout>
</RelativeLayout>
