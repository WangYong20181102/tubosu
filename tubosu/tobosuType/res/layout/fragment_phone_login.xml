<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <!--手机登录的页面-->
    <!--输入手机号-->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp">
        <!--头像贴图-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/zhanghao" />
        <!--号码的输入框-->
        <EditText
            android:id="@+id/fpl_phone_num"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:background="@null"
            android:hint="请输入您的手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#333333"
            android:textColorHint="#b3b3b3"
            android:textSize="13sp" />
        <!--删除按钮-->
        <ImageView
            android:visibility="gone"
            android:id="@+id/fpl_phone_num_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/login_close" />
        <!--底部的分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_alignParentBottom="true"
            android:background="#dbdbdb" />
    </RelativeLayout>
    <!--输入验证码-->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp">
        <!--头像贴图-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/yanzheng" />
        <!--号码的输入框-->
        <EditText
            android:id="@+id/fpl_code_num"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="#333333"
            android:textColorHint="#b3b3b3"
            android:textSize="13sp" />
        <!--获取验证码的按钮-->
        <TextView
            android:id="@+id/fpl_get_code"
            android:layout_width="78dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_login_get_code"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#ff6c20"
            android:textSize="12sp" />
        <!--底部的分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_alignParentBottom="true"
            android:background="#dbdbdb" />
    </RelativeLayout>
    <!--登录的按钮-->
    <TextView
        android:id="@+id/fpl_phone_login_btn"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:background="@drawable/shape_login_btn"
        android:gravity="center"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="12sp" />
    <!--其他的登录方式分割线-->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp">

        <View
            android:layout_width="90dp"
            android:layout_height="0.5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#dbdbdb" />

        <View
            android:layout_width="90dp"
            android:layout_height="0.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#dbdbdb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="其他登录方式"
            android:textColor="#bfbfbf"
            android:textSize="11sp" />
    </RelativeLayout>
    <!--微信登录-->
    <RelativeLayout
        android:id="@+id/fpl_weixin_login_btn"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/weixin" />

    </RelativeLayout>
</RelativeLayout>