<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="Theme.IOSched" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 地砖 墙砖 尺寸 item 样式 -->
    <style name="brickTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#7F8E9C</item>
        <item name="android:background">@drawable/selector_brick_type</item>
    </style>


    <!-- 计算器 数字 1-9 item -->
    <style name="calculaterButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- 计算器 上一项 下一项 item -->
    <style name="calculaterButtonStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@drawable/selector_updown_textcolor</item>
    </style>

    <!-- 计算器 计算 item -->
    <style name="calculaterButtonStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">#FFB239</item>
        <item name="android:textColor">@drawable/selector_calculater_textcolor</item>
    </style>


    <style name="textview_unit_price_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:text">单价</item>
        <item name="android:layout_margin">9dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#475A66</item>
    </style>
    <!--    android:background="@drawable/unit_price_textview_bg"   -->


    <style name="imageview_chamption_style">
        <item name="android:layout_width">67dp</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">center</item>
    </style>
    <!-- android:src="@drawable/img_logo_active_list_bg" -->

    <!-- 加载数据时显示的 DialogProgress -->
    <style name="common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 设置屏幕变暗 -->
    </style>

    <style name="warmDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>