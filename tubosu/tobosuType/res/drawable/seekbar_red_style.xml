<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />
            <gradient android:startColor="#F07127"
                android:centerColor="#F07127" android:centerY="0.75"
                android:endColor="#e27738" android:angle="270" />
        </shape>
    </item>



    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dp" />
                <gradient android:startColor="@color/budget_red"
                    android:centerColor="@color/budget_red" android:centerY="0.75"
                    android:endColor="@color/budget_red" android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>