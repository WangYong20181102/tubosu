<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="191dp">


    <LinearLayout
        android:id="@+id/item7_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_item7_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是标题的"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="15sp"
                android:textColor="#00081A"/>


            <LinearLayout
                android:layout_below="@+id/tv_item7_title"
                android:id="@+id/ll_item7_imageview_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_item7_image_left"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/occupied1"/>
                <ImageView
                    android:id="@+id/iv_item7_image_mid"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    android:background="@mipmap/occupied1"/>
                <ImageView
                    android:id="@+id/iv_item7_image_right"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/occupied1"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_below="@+id/ll_item7_imageview_layout">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/tv_item7_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="飞鱼装修"
                        android:textSize="9sp"
                        android:textColor="#5C5F66"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/tv_item7_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18分钟前"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/tv_item7_name"
                        android:textSize="9sp"
                        android:textColor="#9FA1A9"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rel_see_layout"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_see_icon"
                            android:layout_width="13dp"
                            android:layout_height="11dp"
                            android:background="@mipmap/browse" />
                        <TextView
                            android:id="@+id/tv_item7_browse_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:layout_alignTop="@+id/iv_see_icon"
                            android:layout_toRightOf="@+id/iv_see_icon"
                            android:textSize="9sp"
                            android:textColor="#9FA1A9"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_fav_layout"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/rel_see_layout"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_fav_icon"
                            android:layout_width="13dp"
                            android:layout_height="11dp"
                            android:background="@mipmap/like_home" />
                        <TextView
                            android:id="@+id/tv_item7_fav_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:layout_alignTop="@+id/iv_fav_icon"
                            android:layout_toRightOf="@+id/iv_fav_icon"
                            android:textSize="9sp"
                            android:textColor="#9FA1A9"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_good_icon"
                            android:layout_width="13dp"
                            android:layout_height="11dp"
                            android:background="@mipmap/good_home" />
                        <TextView
                            android:id="@+id/tv_item7_good_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11"
                            android:layout_marginLeft="3dp"
                            android:gravity="center"
                            android:layout_alignTop="@+id/iv_good_icon"
                            android:layout_toRightOf="@+id/iv_good_icon"
                            android:textSize="9sp"
                            android:textColor="#9FA1A9"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#f2efef"/>

</RelativeLayout>
