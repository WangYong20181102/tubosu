<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/iv_head_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_mine_bg">

    </ImageView>

    <RelativeLayout
        android:id="@+id/rel_head_picture_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_head_bg"
        android:layout_marginTop="-35dp">
        <com.tobosu.mydecorate.view.RoundImageView
            android:id="@+id/riv_head_picture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/icon_head_default"/>
        <TextView
            android:id="@+id/tv_writername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="登 录"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/riv_head_picture"
            android:textSize="18sp"
            android:textColor="#080E1A"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_collection"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/rel_head_picture_layout"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="我的收藏"
            android:textSize="18sp"
            android:textColor="#3D424C"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_go_next"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F3FC"
            android:layout_alignParentBottom="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F3FC"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_msgcenter"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/rel_collection"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="消息中心"
            android:textSize="18sp"
            android:textColor="#3D424C"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_go_next"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F3F5"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_setting"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/rel_msgcenter"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textSize="18sp"
            android:textColor="#3D424C"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_go_next"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F3F5"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_feedback"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/rel_setting"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="意见反馈"
            android:textSize="18sp"
            android:textColor="#3D424C"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_go_next"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F3F5"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</RelativeLayout>
