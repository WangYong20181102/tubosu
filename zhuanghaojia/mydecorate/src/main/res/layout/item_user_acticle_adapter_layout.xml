<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/linearlayout_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03"
            android:textColor="#93989F"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="小时前"
            android:textColor="#93989F"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linearlayout_time"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/linearlayout_time"
        android:ellipsize="end"
        android:maxEms="13"
        android:singleLine="true"
        android:text="标题"
        android:textColor="#080E1A"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_title"
        android:layout_marginRight="19dp"
        android:background="@drawable/shape_bg_collection_type"
        android:text="家居"
        android:textColor="#E57373"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/_tv_type"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="6dp"
        android:background="@mipmap/occupied1"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_see_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_below="@+id/iv_image"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:text="301人看过"
        android:textColor="#93989F"
        android:textSize="13sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/linearlayout_time"
        android:background="#EDEDED" />
</RelativeLayout>
