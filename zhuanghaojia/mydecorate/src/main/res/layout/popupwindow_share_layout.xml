<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="17dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tv_share_weixin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/share_weixin"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="微信好友"
                android:textColor="@color/color_neutralgrey"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_share_weixin_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/share_weixin_circle"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="朋友圈"
                android:textColor="@color/color_neutralgrey"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/tv_share_qq_space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/share_qq"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="QQ空间"
                android:textColor="@color/color_neutralgrey"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_share_sina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/share_weibo"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="新浪微博"
                android:textColor="@color/color_neutralgrey"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_copy_linck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/copy_link"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="复制链接"
                android:textColor="@color/color_neutralgrey"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>