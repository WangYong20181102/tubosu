<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf9f7"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <com.jude.rollviewpager.RollPagerView
                    android:id="@+id/nhf_roll_pagerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:rollviewpager_hint_alpha="0"
                    app:rollviewpager_hint_color="#7c7c7c"
                    app:rollviewpager_hint_gravity="right"
                    app:rollviewpager_hint_paddingBottom="16dp"
                    app:rollviewpager_hint_paddingLeft="16dp"
                    app:rollviewpager_hint_paddingRight="16dp"
                    app:rollviewpager_hint_paddingTop="16dp"
                    app:rollviewpager_play_delay="3500" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:scaleType="matrix"
                        android:src="@mipmap/nhp_banner"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:text="装好家"
                        android:textColor="@color/bg_white"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/nhf_fadan"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/textView"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/fadan" />
                </RelativeLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/nhp_gongnengjihe"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/nhf_mianfeisheji"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/nhf_zhinengbaojia"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:id="@+id/nhf_zhuangxiujisuanqi"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="5dp"
                android:background="@color/bg_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/textView2"
                        android:layout_toStartOf="@+id/textView2"
                        android:src="@mipmap/hot" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:text="装修头条"
                        android:textColor="#8a8f99"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/nhf_gengduozhuangxiutoutiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="更多"
                            android:textColor="#8a8f99"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@mipmap/more" />
                    </LinearLayout>
                </RelativeLayout>
                <!--横向层级 显示装修头条的三项-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <!--第一篇文章-->
                    <LinearLayout
                        android:id="@+id/nhf_first_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="7dp"
                        android:layout_weight="1"
                        android:background="@drawable/nhf_wz_shape"
                        android:orientation="vertical">
                        <!--单项的显示图层-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <!--第一篇文章的封面图片-->
                            <ImageView
                                android:id="@+id/nhf_img_text1"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/test" />

                            <RelativeLayout
                                android:layout_width="36dp"
                                android:layout_height="42dp">

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="42dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@mipmap/nhp_bg" />

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dp"
                                    android:text="人气"
                                    android:textColor="#ffad42"
                                    android:textSize="9dp" />
                                <!--第一篇文章的人气值-->
                                <TextView
                                    android:id="@+id/nhf_renqi1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView3"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:text="12"
                                    android:textColor="#ffad42"
                                    android:textSize="9dp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/nhf_text_title1"
                            android:layout_width="89dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="环保墙纸，装扮绿色安全家"
                            android:textColor="#5c5f66"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <!--第二篇文章-->
                    <LinearLayout
                        android:id="@+id/nhf_second_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/nhf_wz_shape"
                        android:orientation="vertical">
                        <!--单项的显示图层-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/nhf_img_text2"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/test" />

                            <RelativeLayout
                                android:layout_width="36dp"
                                android:layout_height="42dp">

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="42dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@mipmap/nhp_bg" />

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dp"
                                    android:text="人气"
                                    android:textColor="#ffad42"
                                    android:textSize="9dp" />

                                <TextView
                                    android:id="@+id/nhf_renqi2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView4"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:text="12"
                                    android:textColor="#ffad42"
                                    android:textSize="9dp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/nhf_text_title2"
                            android:layout_width="89dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="环保墙纸，装扮绿色安全家"
                            android:textColor="#5c5f66"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <!--第三篇文章-->
                    <LinearLayout
                        android:id="@+id/nhf_third_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/nhf_wz_shape"
                        android:orientation="vertical">
                        <!--单项的显示图层-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/nhf_img_text3"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/test" />

                            <RelativeLayout
                                android:layout_width="36dp"
                                android:layout_height="42dp">

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="42dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@mipmap/nhp_bg" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dp"
                                    android:text="人气"
                                    android:textColor="#ffad42"
                                    android:textSize="9dp" />

                                <TextView
                                    android:id="@+id/nhf_renqi3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:text="1216"
                                    android:textColor="#ffad42"
                                    android:textSize="9dp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/nhf_text_title3"
                            android:layout_width="89dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:text="环保墙纸，装扮绿色安全家"
                            android:textColor="#5c5f66"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--显示活跃作者选项卡-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="5dp"
                android:background="@color/bg_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/paihang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="作者排行榜"
                        android:textColor="#8a8f99"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <!--第一活跃作者-->
                    <LinearLayout
                        android:id="@+id/nhf_author1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/nhf_author_icon1"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/test" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/jin" />

                            <TextView
                                android:id="@+id/nhf_author_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="第一名作者"
                                android:textColor="#5c5f66"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <!--浏览数-->
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="9dp"
                                android:layout_weight="1"
                                android:src="@mipmap/liulan" />

                            <TextView
                                android:id="@+id/nhf_liulang1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="128"
                                android:textColor="#8a8f99"
                                android:textSize="9sp" />
                            <!--文章数-->
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="9dp"
                                android:layout_weight="1"
                                android:src="@mipmap/nhf_wenzhang" />

                            <TextView
                                android:id="@+id/nhf_wenzhang1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="162"
                                android:textColor="#8a8f99"
                                android:textSize="9sp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--第二名作者-->
                    <LinearLayout
                        android:id="@+id/nhf_author2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/nhf_author_icon2"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/test" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/yin" />

                            <TextView
                                android:id="@+id/nhf_author_name2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="第二名作者"
                                android:textColor="#5c5f66"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <!--浏览数-->
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="9dp"
                                android:layout_weight="1"
                                android:src="@mipmap/liulan" />

                            <TextView
                                android:id="@+id/nhf_liulang2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="128"
                                android:textColor="#8a8f99"
                                android:textSize="9sp" />
                            <!--文章数-->
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="9dp"
                                android:layout_weight="1"
                                android:src="@mipmap/nhf_wenzhang" />

                            <TextView
                                android:id="@+id/nhf_wenzhang2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="162"
                                android:textColor="#8a8f99"
                                android:textSize="9sp" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--第三名作者-->
                    <LinearLayout
                        android:id="@+id/nhf_author3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/nhf_author_icon3"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/test" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/tong" />

                            <TextView
                                android:id="@+id/nhf_author_name3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="第三名作者"
                                android:textColor="#5c5f66"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <!--浏览数-->
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="9dp"
                                android:layout_weight="1"
                                android:src="@mipmap/liulan" />

                            <TextView
                                android:id="@+id/nhf_liulang3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="128"
                                android:textColor="#8a8f99"
                                android:textSize="9sp" />
                            <!--文章数-->
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="9dp"
                                android:layout_weight="1"
                                android:src="@mipmap/nhf_wenzhang" />

                            <TextView
                                android:id="@+id/nhf_wenzhang3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="162"
                                android:textColor="#8a8f99"
                                android:textSize="9sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>