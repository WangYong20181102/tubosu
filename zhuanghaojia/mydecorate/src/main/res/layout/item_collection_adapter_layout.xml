<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <LinearLayout
        android:id="@+id/item_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rel_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@id/up"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tv_collect_title"
                    android:layout_width="222dp"
                    android:layout_height="wrap_content"
                    android:text="不凡设计"
                    android:textColor="#3D424C"
                    android:textSize="13sp"
                    android:maxEms="13"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/shape_bg_collection_type"
                    android:layout_below="@+id/tv_collect_title"
                    android:text="家居"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textColor="#E57373"
                    android:textSize="8sp"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/leftdown"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_below="@+id/up">

                <com.tobosu.mydecorate.view.RoundImageView
                    android:id="@+id/iv_collection_lefticon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_collection_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_collection_lefticon"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:text="飞鱼设置"
                    android:textColor="#8A8F99"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/tv_collection_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_collection_company"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="26分钟前"
                    android:textColor="#8A8F99"
                    android:textSize="10sp"/>

                <RelativeLayout
                    android:id="@+id/rel_rightdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/iv_see"
                        android:layout_width="13dp"
                        android:layout_height="11dp"
                        android:layout_marginRight="3dp"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/browse"/>

                    <TextView
                        android:id="@+id/tv_acticle_see_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/iv_see"
                        android:text="628"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_collection"
            android:layout_width="121dp"
            android:layout_height="78dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_vertical|right"
            android:background="@mipmap/occupied1"/>
    </LinearLayout>
</RelativeLayout>