<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/rel_setting_back"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/image_bar_back"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_image_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/image_bar_share"/>
        </RelativeLayout>
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/image_viewpager"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_centerInParent="true">
    </android.support.v4.view.ViewPager>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/image_viewpager"
        android:layout_marginLeft="21dp">
        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="3"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/tv_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_position"
            android:textSize="26sp"
            android:text=" / "
            android:textColor="#FC9D00"/>
        <TextView
            android:id="@+id/tv_total_image_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_divide"
            android:layout_alignBottom="@+id/tv_divide"
            android:textSize="22sp"
            android:text="3"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>


</RelativeLayout>