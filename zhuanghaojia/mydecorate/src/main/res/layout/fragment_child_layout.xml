<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/child_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swip_scrollview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/child_fragment_recycleview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:id="@+id/homechild_include_netout_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:id="@+id/iv_net_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/icon_net_out"/>
                    <TextView
                        android:id="@+id/tv_go_getnet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置网络"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp"
                        android:background="@drawable/shape_bg_button_getnet"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/iv_net_out"/>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
