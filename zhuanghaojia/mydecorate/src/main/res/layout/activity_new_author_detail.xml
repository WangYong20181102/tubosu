<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.tobosu.mydecorate.activity.NewAuthorDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rel_concern_user_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_mine_bg">

                <LinearLayout
                    android:id="@+id/new_author_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:background="@mipmap/activity_back" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/image"
                        android:text="返回"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_concern_user_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_concern_user_top"
                android:layout_marginTop="-47dp">

                <ImageView
                    android:id="@+id/riv_concerned_head_picture"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tv_concern_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/riv_concerned_head_picture"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="作者名"
                    android:textColor="#080E1A"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_is_concernuser_concerned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_concern_username"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_bg_button_article_concerned"
                    android:text=""
                    android:textColor="#C0C4CC"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_article_total_num"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/rel_concern_user_layout"
                android:layout_marginTop="20dp"
                android:background="#FAFAFA">

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:text="共"
                    android:textColor="#C0C4CC"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_total_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_total"
                    android:text="10"
                    android:textColor="#8A8F99"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_total_num"
                    android:text="篇文章"
                    android:textColor="#C0C4CC"
                    android:textSize="14sp" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_user_acticles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_article_total_num"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@+id/writer_include_netout_layout"
        layout="@layout/layout_netout_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</RelativeLayout>
