<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="41dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_php_item_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center|left"
                android:text="21"
                android:textColor="#FF7F838C"
                android:textSize="@dimen/text_size_32px" />

            <TextView
                android:textColor="#FFB8BDC7"
                android:id="@+id/item_php_item_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="11月"
                android:textSize="@dimen/text_size_20px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_php_item_title"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="时尚简约软装，细节之美~"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_30px" />

                <TextView
                    android:id="@+id/item_php_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_canjia"
                    android:paddingBottom="1dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="1dp"
                    android:layout_marginRight="16dp"
                    android:text="参与"
                    android:textColor="@color/text_yellow"
                    android:textSize="@dimen/text_size_22px" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/item_php_item_img1"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/item_php_item_img2"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/item_php_item_img3"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/item_php_item_img4"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/item_php_item_img5"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/item_php_item_img6"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/item_php_item_img7"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/item_php_item_img8"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/item_php_item_img9"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/item_php_item_add_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="10秒前"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_24px" />

                <LinearLayout
                    android:id="@+id/item_dynamic_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/item_php_item_comment_img"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/pinglun" />
                    <!--评论数-->
                    <TextView
                        android:id="@+id/item_php_item_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="24"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_24px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/item_php_item_praise_img"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/zan2" />
                    <!--点赞数-->
                    <TextView
                        android:id="@+id/item_php_item_praise_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="24"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_24px" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="9dp"
        android:background="@color/bg_gray"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</LinearLayout>