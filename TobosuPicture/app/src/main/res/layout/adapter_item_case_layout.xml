<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tbs.tobosupicture.view.RoundAngleImageView
            android:id="@+id/iv_case_big_sample_pic"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@mipmap/case_loading_img_fail"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/re_case_desiner_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_case_big_sample_pic"
            android:layout_marginRight="40dp"
            android:layout_marginTop="-32dp">
            <ImageView
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/color_white_white" />
            <ImageView
                android:id="@+id/iv_case_designer_pic"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/pic" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_case_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/iv_case_big_sample_pic"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:text="泰国餐厅效果图"
            android:textColor="#1a1919"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/tv_case_title"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_case_decription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="现代欧式 | 4室2厅2卫 | 146m²"
                android:textColor="#9EA1A6"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_case_design"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:background="@drawable/shape_free_design_textview_bg"
                    android:paddingBottom="4dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="4dp"
                    android:text="免费报价"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@color/color_dividing_color"/>
</LinearLayout>
