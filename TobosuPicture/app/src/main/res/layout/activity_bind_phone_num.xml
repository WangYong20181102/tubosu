<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical"
    tools:context="com.tbs.tobosupicture.activity.BindPhoneNumActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/bind_phone_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fanhui2" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机号"
            android:textColor="#000000"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="42dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/bind_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:hint="请输入您的手机号码"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="#000000"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/text_size_28px" />

            <ImageView
                android:id="@+id/find_pw_clean_phone_num"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/close"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_divide" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/bind_phone_code"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:hint="请输入收到的验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="#000000"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/text_size_28px" />

            <TextView
                android:id="@+id/bind_phone_get_code"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_get_code"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="获取"
                android:textColor="#86898f"
                android:textSize="@dimen/text_size_32px" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_divide" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="*绑定手机号方便用手机号登陆，可找回密码"
            android:textColor="@color/text_red" />

        <TextView
            android:id="@+id/bind_phone_ok"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/shape_register"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_32px" />
    </LinearLayout>
</LinearLayout>
