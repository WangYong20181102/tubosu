<?xml version="1.0" encoding="utf-8"?><!--回复-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/bg_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/dynamic_detail_comment_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/default_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dynamic_detail_comment_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="bottom"
                    android:text="灵感家居"
                    android:textColor="@color/text_yellow"
                    android:textSize="@dimen/text_size_28px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dynamic_detail_comment_zan_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1"
                        android:textColor="@color/text_yellow"
                        android:textSize="@dimen/text_size_20px"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:id="@+id/dynamic_detail_comment_ll_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/dynamic_detail_comment_zan"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@mipmap/zan2" />

                        <TextView
                            android:id="@+id/dynamic_detail_comment_zannum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="26"
                            android:textSize="@dimen/text_size_24px" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/dynamic_detail_comment_title"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="时尚简约软装，细节之美~"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_30px" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/dynamic_detail_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="07-16 18:20"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_24px" />

                <TextView
                    android:id="@+id/dynamic_detail_comment_revert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_huifu"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="回复"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_24px" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/child_comment_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#f5f5f5"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/child_comment_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="0dp">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>