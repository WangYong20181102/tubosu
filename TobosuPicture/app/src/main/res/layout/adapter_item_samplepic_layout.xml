<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="149dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="@drawable/shape_designer_case_relativelayout">
        <ImageView
            android:id="@+id/iv_sample_img"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@mipmap/case_loading_img_fail"/>

        <TextView
            android:id="@+id/tv_sample_num"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/shape_designer_textview_num"
            android:text="7"
            android:layout_alignBottom="@+id/iv_sample_img"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_sample_desc"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_sample_img"
            android:layout_alignRight="@+id/iv_sample_img"
            android:text="7sdfsgfdghfghghjhgfjgfhdgfsdsafd"
            android:maxLines="1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/iv_sample_img"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:textColor="#84878E"/>

    </RelativeLayout>
</RelativeLayout>
