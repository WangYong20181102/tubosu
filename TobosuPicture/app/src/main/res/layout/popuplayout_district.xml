<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_popupwindow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="#dfdddd"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="搜索小区"
                android:textSize="14sp"/>
            <RelativeLayout
                android:id="@+id/relCloseWindown"
                android:layout_width="49dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/close2"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/phone"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="所在地：广东省 深圳市 宝安区"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvSearchDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/shape_search_disctrict"
                android:textSize="14sp"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editTextSearchDistrct"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="14dp"
                    android:background="@drawable/shape_window_edittextview"
                    android:hint="搜索小区名"
                    android:drawableLeft="@mipmap/sousuo"
                    android:textColor="#3e3d3d"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="16dp"
                android:background="#eae8e8"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="374dp">

                <ImageView
                    android:id="@+id/ivNoDistrictDatas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:background="@mipmap/no_anydata"/>

                <RelativeLayout
                    android:id="@+id/relHasData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/pullHeadedLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                    </LinearLayout>
                    <LinearLayout
                        android:layout_below="@+id/pullHeadedLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <com.tbs.tobosupicture.view.PullToRefreshGridView
                            android:id="@+id/pullGridView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:horizontalSpacing="10dp"
                            android:background="@color/white"
                            android:listSelector="@android:color/transparent"
                            android:numColumns="3"
                            android:padding="2dp"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="2dp" >
                        </com.tbs.tobosupicture.view.PullToRefreshGridView>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
