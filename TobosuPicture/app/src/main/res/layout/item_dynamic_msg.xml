<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_dm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:ellipsize="end"
                android:maxEms="13"
                android:singleLine="true"
                android:text="榻榻米书柜一体，看书休息两不误哦"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_28px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_dm_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/default_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_dm_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="灵感家居"
                        android:textColor="#eb9846"
                        android:textSize="@dimen/text_size_26px" />

                    <TextView
                        android:id="@+id/item_dm_time_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:ellipsize="end"
                        android:ems="13"
                        android:singleLine="true"
                        android:text="3分钟前 很好看呀公司的美女好多呀眼花缭乱"
                        android:textColor="#a6a9ad"
                        android:textSize="@dimen/text_size_24px" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/item_dm_image"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/test" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_divide" />

        <View
            android:id="@+id/item_dm_click"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>