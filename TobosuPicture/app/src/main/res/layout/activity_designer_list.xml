<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.DesignerImgListActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/designerImgListSwipRefreshLayout"
        android:layout_width="match_parent"
        android:layout_below="@+id/llDesignerlPicBack"
        android:layout_above="@+id/sdrejkl"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/designerImgListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <View
        android:id="@+id/sdrejkl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/sfgh"
        android:background="#efeded"/>
    <LinearLayout
        android:id="@+id/sfgh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/relConcernDesigner"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:drawableLeft="@mipmap/jiaguanzhu2"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="关注"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relDesignerGetDesign"
                android:layout_weight="1.5"
                android:background="#25C5A0"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:drawableLeft="@mipmap/sheji2"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="设计"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/llDesignerlPicBack"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#00FFFFFF">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#00FFFFFF"
            android:layout_marginLeft="14dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/fanhui2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="3dp"
                android:background="#00FFFFFF"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:text="返回"/>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
