<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="@color/bg_white">

    <ImageView
        android:id="@+id/iv_designer1_pic"
        android:layout_width="79dp"
        android:layout_marginLeft="14dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:background="@mipmap/pic"
        android:layout_height="79dp"/>

    <TextView
        android:id="@+id/tv_desinger1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_designer1_pic"
        android:text="泰国餐厅效果图"
        android:textSize="16sp"
        android:textColor="#EBA96D"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_desinger_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_desinger1_name"
        android:text="粉丝 16 | 浏览数 16 | 效果图 16 | 案例 16"
        android:textSize="13sp"
        android:textColor="#9A9DA2"
        android:layout_above="@+id/svva"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_gravity="center_horizontal"/>

    <View
        android:id="@+id/svva"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#f7f4f4"/>
</RelativeLayout>
