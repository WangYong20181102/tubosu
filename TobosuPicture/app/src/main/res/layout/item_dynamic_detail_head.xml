<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">
                <!--头像-->
                <ImageView
                    android:id="@+id/dynamic_detail_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/default_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="18dp"
                android:orientation="vertical">
                <!--昵称-->
                <TextView
                    android:id="@+id/dynamic_detail_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="灵感家居"
                    android:textColor="@color/text_yellow"
                    android:textSize="@dimen/text_size_28px" />
                <!--发布内容-->
                <TextView
                    android:id="@+id/dynamic_detail_title"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="时尚简约软装，细节之美~"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_30px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/dynamic_detail_img1"
                            android:layout_width="93dp"
                            android:layout_height="93dp"
                            android:layout_marginRight="4dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/test"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/dynamic_detail_img2"
                            android:layout_width="93dp"
                            android:layout_height="93dp"
                            android:layout_marginRight="4dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/test"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/dynamic_detail_img3"
                            android:layout_width="93dp"
                            android:layout_height="93dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/test"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/dynamic_detail_img4"
                            android:layout_width="93dp"
                            android:layout_height="93dp"
                            android:layout_marginRight="4dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/test"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/dynamic_detail_img5"
                            android:layout_width="93dp"
                            android:layout_height="93dp"
                            android:layout_marginRight="4dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/test"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/dynamic_detail_img6"
                            android:layout_width="93dp"
                            android:layout_height="93dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/test"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/dynamic_detail_img7"
                            android:layout_width="93dp"
                            android:layout_height="93dp"
                            android:layout_marginRight="4dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/test"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/dynamic_detail_img8"
                            android:layout_width="93dp"
                            android:layout_height="93dp"
                            android:layout_marginRight="4dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/test"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/dynamic_detail_img9"
                            android:layout_width="93dp"
                            android:layout_height="93dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/test"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="285dp"
                    android:layout_height="32dp">

                    <TextView
                        android:id="@+id/dynamic_detail_add_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:text="10秒前"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_24px" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/dynamic_detail_comment"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@mipmap/pinglun" />
                        <!--评论数-->
                        <TextView
                            android:id="@+id/dynamic_detail_comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="评论 24"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/text_size_24px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dynamic_dynamic_zan_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/dynamic_detail_comment_praise"
                            android:text="+1"
                            android:textColor="@color/text_yellow"
                            android:textSize="@dimen/text_size_20px"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:id="@+id/dynamic_detail_ll_praise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/dynamic_detail_praise"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@mipmap/zan2" />
                            <!--点赞数-->
                            <TextView
                                android:layout_gravity="bottom"
                                android:id="@+id/dynamic_detail_praise_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="24"
                                android:textColor="@color/text_gray"
                                android:textSize="@dimen/text_size_24px" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_divide" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dynamic_zan_ll_pop"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f7f7f7"
        android:gravity="center|left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="48dp"
            android:background="#f7f7f7"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dynamic_zan1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/default_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dynamic_zan2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/default_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dynamic_zan3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/default_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dynamic_zan4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/default_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dynamic_zan5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/default_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dynamic_zan6"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/default_icon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dynamic_zan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="126人赞过"
                android:textSize="@dimen/text_size_24px" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/dynamic_none_comment"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="35dp"
        android:src="@mipmap/none_comment"
        android:visibility="gone" />
</LinearLayout>