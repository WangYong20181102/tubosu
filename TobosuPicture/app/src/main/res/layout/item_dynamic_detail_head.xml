<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/dynamic_detail_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/default_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dynamic_detail_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="灵感家居"
                android:textColor="@color/text_yellow"
                android:textSize="@dimen/text_size_28px" />

            <TextView
                android:id="@+id/dynamic_detail_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="时尚简约软装，细节之美~"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_30px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dynamic_detail_img1"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/dynamic_detail_img2"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/dynamic_detail_img3"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dynamic_detail_img4"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/dynamic_detail_img5"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/dynamic_detail_img6"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dynamic_detail_img7"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/dynamic_detail_img8"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/dynamic_detail_img9"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/dynamic_detail_add_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="10秒前"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_24px" />

                <LinearLayout
                    android:id="@+id/item_dynamic_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/pinglun" />
                    <!--评论数-->
                    <TextView
                        android:id="@+id/dynamic_detail_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="24"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_24px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/zan2" />
                    <!--点赞数-->
                    <TextView
                        android:id="@+id/dynamic_detail_praise_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="24"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_24px" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="#f7f7f7"
        android:gravity="center|left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="48dp"
            android:background="#f7f7f7"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dynamic_zan1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/default_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dynamic_zan2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/default_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dynamic_zan3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/default_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dynamic_zan4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/default_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dynamic_zan5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/default_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dynamic_zan6"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/default_icon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dynamic_zan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="126人赞过"
                android:textSize="@dimen/text_size_24px" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="35dp"
        android:visibility="gone"
        android:id="@+id/dynamic_none_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@mipmap/none_comment" />
</LinearLayout>