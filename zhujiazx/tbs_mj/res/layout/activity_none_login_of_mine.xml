<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/none_login_company_of_mine_all_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.tbs.tbs_mj.activity.NoneLoginOfMineActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <!--顶部显示的标题-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentTop="true">
                <!--标题-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="我的"
                    android:textColor="#000000"
                    android:textSize="16sp" />
                <!--右边的设置图片-->
                <RelativeLayout
                    android:id="@+id/none_login_setting_rl"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/none_login_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/shezhi" />
                </RelativeLayout>


            </RelativeLayout>
            <!--头像以及名称-->
            <RelativeLayout
                android:id="@+id/none_login_register_rl"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <!--头像-->
                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/weidenglutouxiang" />
                <!--登录注册字样-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="92dp"
                    android:text="登录/注册"
                    android:textColor="#333333"
                    android:textSize="16sp" />
                <!--跳转箭头-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:src="@drawable/shangjiantou" />
            </RelativeLayout>
            <!--上边的分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#f7f7f7"
                android:visibility="gone" />
            <!--收藏、记账、订单按钮-->
            <RelativeLayout
                android:id="@+id/none_login_goto_login_rl"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:visibility="gone">
                <!--收藏-->
                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/my_shoucang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="收藏"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>
                <!--记账-->
                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/my_jizhang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="记账"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>
                <!--订单-->
                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/my_dingdan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="订单"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
            <!--第二条分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#f7f7f7" />

            <ImageView
                android:id="@+id/none_login_dalibao_iv"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                android:src="@drawable/libao" />

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#f7f7f7" />
            <!--我的订单-->
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/none_login_dingdan_rl"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dingdan_mine" />
                <!--文本描述-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="33dp"
                    android:text="我的订单"
                    android:textColor="#333333"
                    android:textSize="14sp" />
                <!--右边的箭头-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/youjiantou" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:background="#f7f7f7" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#f7f7f7" />
            <!--客服、公众号  等等-->
            <!--客服-->
            <RelativeLayout
                android:id="@+id/none_login_kefu_rl"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/my_kefu" />
                <!--文本描述-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="33dp"
                    android:text="客服热线"
                    android:textColor="#333333"
                    android:textSize="14sp" />
                <!--电话-->
                <TextView
                    android:id="@+id/none_login_tel_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="38dp"
                    android:text="400-606-2221"
                    android:textColor="#b3b3b3"
                    android:textSize="12sp" />
                <!--右边的箭头-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/youjiantou" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:background="#f7f7f7" />
            </RelativeLayout>
            <!--服务号-->
            <RelativeLayout
                android:id="@+id/none_login_fuwuhao_rl"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="16dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/fuwuhao" />
                <!--文本描述-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="33dp"
                    android:text="土拨鼠服务号"
                    android:textColor="#333333"
                    android:textSize="14sp" />
                <!--服务号-->
                <TextView
                    android:id="@+id/none_login_wc_serive_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="38dp"
                    android:text="itobosu"
                    android:textColor="#b3b3b3"
                    android:textSize="12sp" />
                <!--右边的箭头-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/youjiantou" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:background="#f7f7f7" />
            </RelativeLayout>
            <!--分享-->
            <RelativeLayout
                android:id="@+id/none_login_fankui_rl"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/fannkui_mine" />
                <!--文本描述-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="33dp"
                    android:text="反馈与建议"
                    android:textColor="#333333"
                    android:textSize="14sp" />
                <!--右边的箭头-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/youjiantou" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:background="#f7f7f7" />
            </RelativeLayout>
            <!--当前版本-->
            <RelativeLayout
                android:id="@+id/none_login_banben_rl"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/banben_mine" />
                <!--文本描述-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="33dp"
                    android:text="当前版本"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/none_login_banben_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="38dp"
                    android:text=""
                    android:textColor="#b3b3b3"
                    android:textSize="12sp" />
                <!--右边的箭头-->
                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/youjiantou" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:background="#f7f7f7" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>