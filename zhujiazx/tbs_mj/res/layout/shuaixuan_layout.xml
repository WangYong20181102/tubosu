<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="314dp"
    android:background="@drawable/shape_shaixuan10_bg"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp">

                        <RelativeLayout
                            android:id="@+id/relChooseCitys"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="14dp">

                            <ImageView
                                android:id="@+id/shuaixuanCityIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/location"/>
                            <TextView
                                android:id="@+id/shuaixuanCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:layout_centerVertical="true"
                                android:textColor="#333333"
                                android:textSize="12sp"
                                android:layout_toRightOf="@+id/shuaixuanCityIcon"
                                android:text="深圳"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:visibility="gone"
                                android:layout_centerVertical="true"
                                android:textColor="#333333"
                                android:textSize="12sp"
                                android:layout_toRightOf="@+id/shuaixuanCity"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="#333333"
                            android:textSize="12sp"
                            android:layout_marginRight="16dp"
                            android:text="筛选"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#F2F2F2"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="服务区域"
                            android:textColor="#000000"
                            android:layout_margin="16dp"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.tbs.tbs_mj.customview.CustomGridView
                            android:id="@+id/gvServiceArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:verticalSpacing="10dp"
                            android:horizontalSpacing="4dp"
                            android:listSelector="#00000000"
                            android:numColumns="3">
                        </com.tbs.tbs_mj.customview.CustomGridView>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#F2F2F2"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="家庭装修"
                            android:textColor="#000000"
                            android:layout_margin="16dp"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.tbs.tbs_mj.customview.CustomGridView
                            android:id="@+id/gvJiating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:verticalSpacing="10dp"
                            android:horizontalSpacing="4dp"
                            android:listSelector="#00000000"
                            android:numColumns="3">
                        </com.tbs.tbs_mj.customview.CustomGridView>
                    </LinearLayout>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#F2F2F2"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginBottom="64dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="商业装修"
                            android:textColor="#000000"
                            android:layout_margin="16dp"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.tbs.tbs_mj.customview.CustomGridView
                            android:id="@+id/gvShangye"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:verticalSpacing="10dp"
                            android:listSelector="#00000000"
                            android:horizontalSpacing="4dp"
                            android:numColumns="3">
                        </com.tbs.tbs_mj.customview.CustomGridView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_height="49dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/chongzhi_shape"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/resetShuaixuan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="重置"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/okShuaixuan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="确定"
                    android:background="@color/app_theme_color"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_weight="1"/>

            </LinearLayout>

        </RelativeLayout>
</RelativeLayout>
