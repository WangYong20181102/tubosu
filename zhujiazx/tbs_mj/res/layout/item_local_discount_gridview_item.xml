<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="168dip"
    android:layout_height="88dip"
    android:layout_marginLeft="4dip"
    android:layout_marginRight="4dip"
    android:layout_gravity="center" >

    <RelativeLayout
        android:id="@+id/local_discount_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" >

        <com.tbs.tbs_mj.customview.RoundImageView
            android:id="@+id/riv_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="16dip"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_logo_active_list_bg"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_local_discount_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/riv_logo"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:maxLines="3"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tv_local_discount_desc"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:textColor="#EBACA9"
            android:textSize="8sp" />
    </RelativeLayout>

</RelativeLayout>