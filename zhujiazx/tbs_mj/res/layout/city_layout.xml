<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="314dp"
    android:background="@drawable/shape_shaixuan10_bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relabsdf"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="4dp">

        <RelativeLayout
            android:id="@+id/relBackDialog"
            android:layout_width="26dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/shuaixuanCityIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/fanhui0"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#333333"
            android:textSize="12sp"
            android:layout_marginRight="16dp"
            android:text="筛选"/>
    </RelativeLayout>
    <View
        android:id="@+id/ivban"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relabsdf"
        android:background="#F2F2F2"/>

    <LinearLayout
        android:id="@+id/banr"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_below="@+id/ivban"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/chooseProvince"
                android:text="省份"
                android:textColor="#FF6F20"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:id="@+id/provincebar"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_alignParentBottom="true"
                android:background="#FF6F20"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/chooseCity"
                android:text="城市"
                android:textColor="#999999"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:id="@+id/citybar"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:background="#FF6F20"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/sfban"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/banr"
        android:background="#F2F2F2"/>

    <ListView
        android:id="@+id/provincedatalist"
        android:layout_below="@+id/sfban"
        android:layout_width="match_parent"
        android:divider="@null"
        android:layout_height="match_parent"/>
    <ListView
        android:id="@+id/citydatalist"
        android:layout_below="@+id/sfban"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:divider="@null"
        android:layout_height="match_parent"/>
</RelativeLayout>
