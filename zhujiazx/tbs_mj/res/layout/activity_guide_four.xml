<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GuideFourActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--顶部的图片-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/top_banner2" />

        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/jieguo1" />
        <!--输入手机号码框-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp">

            <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/case_bg" />

            <EditText
                android:id="@+id/guide_four_phone_num_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="填写手机号，结果将以短信发送到您的手机上"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="#010101"
                android:textColorHint="#aaaaaa"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>
    <!--返回按钮-->
    <RelativeLayout
        android:id="@+id/guide_four_back_rl"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/back_white" />
    </RelativeLayout>

    <!--关闭的按钮-->
    <RelativeLayout
        android:id="@+id/guide_four_close_rl"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/x2" />
    </RelativeLayout>
    <!--确定的按钮-->
    <TextView
        android:visibility="visible"
        android:id="@+id/guide_four_ok_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/app_theme_color"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>